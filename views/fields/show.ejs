<% layout('layouts/Boilerplate') %>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <% for(let img of field.images) {%>
      <img src="<%= img.url %> " class="card-img-top" alt="..." />
      <% } %>
      <div class="card-body">
        <h5 class="card-title"><%= field.title %></h5>
        <p class="card-text"><%= field.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= field.location %></li>
        <li class="list-group-item">
          Submitted by <%= field.owner.username %>
        </li>
        <li class="list-group-item"><%= field.price %></li>
      </ul>
      <% if (currentUser && field.owner.equals(currentUser._id)) {%>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/fields/<%= field._id %>/edit "
          >Edit</a
        >
        <form
          class="d-inline"
          action="/fields/<%= field._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete Field</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) { %>
    <h2>Leave a Review</h2>
    <form
      action="/fields/<%= field._id %>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <div class="mb-3">
          <fieldset class="starability-basic">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="3"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
              checked
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of field.reviews) {%>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= review.owner.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="card-text">Review: <%= review.body %></p>
        <% if (currentUser && review.owner.equals(currentUser._id)) {%>
        <form
          action="/fields/<%= field._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>

<a href="/fields">All Fields</a>
